# =============================================================================
# TORCH FELLOWSHIP BACKEND - STAGING ENVIRONMENT CONFIGURATION
# =============================================================================

# Server Configuration
PORT=5001
NODE_ENV=staging

# Database Configuration
# Use a separate staging database
MONGODB_URI=mongodb+srv://staging_user:staging_password@your-cluster.mongodb.net/torch-fellowship-staging?retryWrites=true&w=majority
DB_NAME=torch-fellowship-staging

# JWT Configuration
JWT_SECRET=staging_jwt_secret_different_from_production
JWT_EXPIRES_IN=7d

# Gemini AI Configuration
GEMINI_API_KEY=your_staging_gemini_api_key

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_staging_cloud_name
CLOUDINARY_API_KEY=your_staging_api_key
CLOUDINARY_API_SECRET=your_staging_api_secret

# CORS Configuration
FRONTEND_URL=https://staging-torch-fellowship.netlify.app

# Security Configuration
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=200

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=/var/log/torch-fellowship/staging.log

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=3000