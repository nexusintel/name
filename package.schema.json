{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Package",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the package."
    },
    "version": {
      "type": "string",
      "description": "The version of the package."
    },
    "description": {
      "type": "string",
      "description": "A brief description of the package."
    },
    "main": {
      "type": "string",
      "description": "The main entry point for the package."
    },
    "type": {
      "type": "string",
      "description": "Type of the package (commonjs or module)."
    },
    "scripts": {
      "type": "object",
      "description": "Scripts that can be executed using npm run.",
      "additionalProperties": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Package dependencies.",
      "additionalProperties": {
        "type": "string"
      }
    },
    "devDependencies": {
      "type": "object",
      "description": "Development package dependencies.",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}